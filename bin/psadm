#!/usr/bin/env bash
#Title         :psadm
#Description   :Utility script for working with PeopleSoft servers under Unix/Linux
#Author        :JR Bing
#==============================================================================

###############################
# Source the function libraries
###############################

BASEDIR=$(dirname $0)
source $BASEDIR/../lib/libutil.sh
source $BASEDIR/../lib/libpsadm.sh

############
# Validation
############

checkPsftVars

#############################
# Parse the command arguments
#############################

case $1 in

  (help)
    printHelp
  ;;

  (status)
    case $2 in
      (app)
        showAppserverProcesses
        pause
        showAppserverServerStatus
        pause
        showAppserverClientStatus
        pause
        showAppserverQueueStatus
      ;;
      (web)
        showWebserverStatus
      ;;
      (prcs)
        showProcessSchedulerStatus
      ;;
      (agent)
        showEMAgentStatus
      ;;
      (all)
        showAppserverProcesses
        pause
        showAppserverServerStatus
        pause
        showAppserverClientStatus
        pause
        showAppserverQueueStatus
        pause
        showProcessSchedulerStatus
        pause
        showWebserverStatus
      ;;
      (*)
        printStatusHelp
      ;;
    esac
  ;;

  (start)
    case $2 in
      (app)
        startAppserver
      ;;
      (web)
        startWebserver
      ;;
      (prcs)
        startProcessScheduler
      ;;
      (agent)
        startEMAgent
      ;;
      (all)
        startAppserver
        startProcessScheduler
        startWebserver
      ;;
      (*)
        printStartHelp
      ;;
    esac
  ;;

  (stop)
    case $2 in
      (app)
        stopAppserver
      ;;
      (web)
        stopWebserver
      ;;
      (prcs)
        stopProcessScheduler
      ;;
      (agent)
        stopEMAgent
      ;;
      (all)
        stopAppserver
        stopProcessScheduler
        stopWebserver
      ;;
      (*)
        printStopHelp
      ;;
    esac
  ;;

  (bounce)
    case $2 in
      (app)
        bounceAppserver
      ;;
      (web)
        bounceWebserver
      ;;
      (prcs)
        bounceProcessScheduler
      ;;
      (agent)
        bounceEMAgent
      ;;
      (hub)
        bounceEMHub
      ;;
      (all)
        stopProcessScheduler
        stopWebserver
        stopAppserver

        flushAppserverIPC
        purgeAppserverCache
        configAppserver
        startAppserver

        purgeWebserverCache
        startWebserver

        flushProcessSchedulerIPC
        configProcessScheduler
        startProcessScheduler
      ;;
      (*)
        printBounceHelp
      ;;
    esac
  ;;

  (show)
    case $2 in
      (vars)
        showPsftVars
      ;;
      (*)
        printShowHelp
      ;;
    esac
  ;;

  (purge)
    case $2 in
      (agent)
        purgeEMAgent
      ;;
      (hub)
        purgeEMHub
      ;;
      (web)
        purgeWebserverCache
      ;;
      (*)
        printPurgeHelp
      ;;
    esac
  ;;

  (watch)
    case $2 in
      (app)
        case $3 in
          (proc)
            watchAppserverProcesses
          ;;
          (srvr)
            watchAppserverServerStatus
          ;;
          (client)
            watchAppserverClientStatus
          ;;
          (queue)
            watchAppserverQueueStatus
          ;;
          (*)
            printWatchAppHelp
          ;;
        esac
      ;;
      (prcs)
        watchProcessSchedulerStatus
      ;;
      (*)
        printWatchHelp
      ;;
    esac
  ;;

  (tail)
    case $2 in
      (app)
        tailAppserver
      ;;
      (web)
        tailWebserver
      ;;
      (prcs)
        tailProcessScheduler
      ;;
      (agent)
        tailEMAgent
      ;;
      (*)
        printTailHelp
      ;;
    esac
  ;;

  (compile)
    compileCobol
  ;;

  (link)
    linkCobol
  ;;

  (preload)
    preloadAppserverCache
  ;;

  (*)
    printHelp
  ;;

esac
