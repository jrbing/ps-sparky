#!/usr/bin/env bash
#===============================================================================
# vim: softtabstop=2 shiftwidth=2 expandtab fenc=utf-8:
#===============================================================================
#
#          FILE: psadm
#
#   DESCRIPTION: Utility script for working with PeopleSoft servers
#                under Unix/Linux
#
#===============================================================================

set -e          # Exit immediately on error
#set -u          # Treat unset variables as an error
set -o pipefail # Prevent errors in a pipeline from being masked
IFS=$'\n\t'     # Set the internal field separator to a tab and newline

# Source the function libraries
BASEDIR="$(dirname $0)"
source "$BASEDIR"/../lib/libutil.sh
source "$BASEDIR"/../lib/libpsadm.sh

# Validation
checkPsftVars

# Parse the command arguments
case $1 in

  (help)
    printHelp
  ;;

  (status)
    case $2 in
      (app)
        showAppserverProcesses
        pause
        showAppserverServerStatus
        pause
        showAppserverClientStatus
        pause
        showAppserverQueueStatus
      ;;
      (web)
        showWebserverStatus
      ;;
      (prcs)
        showProcessSchedulerStatus
      ;;
      (agent)
        showEMAgentStatus
      ;;
      (all)
        showAppserverProcesses
        pause
        showAppserverServerStatus
        pause
        showAppserverClientStatus
        pause
        showAppserverQueueStatus
        pause
        showProcessSchedulerStatus
        pause
        showWebserverStatus
      ;;
      (*)
        printStatusHelp
      ;;
    esac
  ;;

  (start)
    case $2 in
      (app)
        startAppserver
      ;;
      (web)
        startWebserver
      ;;
      (prcs)
        startProcessScheduler
      ;;
      (agent)
        startEMAgent
      ;;
      (all)
        startAppserver
        startProcessScheduler
        startWebserver
      ;;
      (*)
        printStartHelp
      ;;
    esac
  ;;

  (stop)
    case $2 in
      (app)
        stopAppserver
      ;;
      (web)
        stopWebserver
      ;;
      (prcs)
        stopProcessScheduler
      ;;
      (agent)
        stopEMAgent
      ;;
      (all)
        stopAppserver
        stopProcessScheduler
        stopWebserver
      ;;
      (*)
        printStopHelp
      ;;
    esac
  ;;

  (kill)
    case $2 in
      (app)
        killAppserver
      ;;
      (prcs)
        killProcessScheduler
      ;;
      (*)
        printKillHelp
      ;;
    esac
  ;;

  (bounce)
    case $2 in
      (app)
        bounceAppserver
      ;;
      (web)
        bounceWebserver
      ;;
      (prcs)
        bounceProcessScheduler
      ;;
      (agent)
        bounceEMAgent
      ;;
      (hub)
        bounceEMHub
      ;;
      (all)
        stopProcessScheduler
        stopWebserver
        stopAppserver

        flushAppserverIPC
        purgeAppserverCache
        configAppserver
        startAppserver

        purgeWebserverCache
        startWebserver

        flushProcessSchedulerIPC
        configProcessScheduler
        startProcessScheduler
      ;;
      (*)
        printBounceHelp
      ;;
    esac
  ;;

  (purge)
    case $2 in
      (agent)
        purgeEMAgent
      ;;
      (app)
        flushAppserverIPC
        purgeAppserverCache
      ;;
      (hub)
        purgeEMHub
      ;;
      (web)
        purgeWebserverCache
      ;;
      (prcs)
        purgeProcessSchedulerCache
      ;;
      (*)
        printPurgeHelp
      ;;
    esac
  ;;

  (watch)
    case $2 in
      (app)
        case $3 in
          (proc)
            watchAppserverProcesses
          ;;
          (srvr)
            watchAppserverServerStatus
          ;;
          (client)
            watchAppserverClientStatus
          ;;
          (queue)
            watchAppserverQueueStatus
          ;;
          (*)
            printWatchAppHelp
          ;;
        esac
      ;;
      (prcs)
        watchProcessSchedulerStatus
      ;;
      (*)
        printWatchHelp
      ;;
    esac
  ;;

  (tail)
    case $2 in
      (app)
        tailAppserver
      ;;
      (web)
        tailWebserver
      ;;
      (prcs)
        tailProcessScheduler
      ;;
      (agent)
        tailEMAgent
      ;;
      (*)
        printTailHelp
      ;;
    esac
  ;;

  (compile)
    compileCobol
  ;;

  (link)
    linkCobol
  ;;

  (preload)
    preloadAppserverCache
  ;;

  (edit)
    case $2 in
      (app)
        editAppserver
      ;;
      (web)
        editWebserver
      ;;
      (prcs)
        editProcessScheduler
      ;;
      (agent)
        editEMAgent
      ;;
      (ig)
        editIntegrationGateway
      ;;
      (*)
        printEditHelp
      ;;
    esac
  ;;

  (*)
    printHelp
  ;;

esac
