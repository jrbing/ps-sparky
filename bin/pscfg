#!/usr/bin/env bash
#Title         :pscfg
#Description   :Utility script for modifying Sparky Configuration files
#Author        :JR Bing
#==============================================================================

###############################
# Source the function libraries
###############################

BASEDIR=$(dirname $0)
source $BASEDIR/../lib/libutil.sh
source $BASEDIR/../lib/libpscfg.sh

checkForEnvironmentDir

#############################
# Parse the command arguments
#############################

case $1 in

  (help)
    printHelp
  ;;

  (list)
    listEnvironments
  ;;

  (create)
    if [[ $2 ]]; then
      createEnvironment $2
    else
      log "Additional parameters required"
      printCreateHelp
    fi
  ;;

  (edit)
    if [[ $2 ]]; then
      editEnvironment $2
    else
      log "Additional parameters required"
      printEditHelp
    fi
  ;;

  (delete)
    if [[ $2 ]]; then
      deleteEnvironment $2
    else
      log "Additional parameters required"
      printDeleteHelp
    fi
  ;;

  (copy)
    if [[ $2 && $3 ]]; then
      copyEnvironment $2 $3
    else
      log "Additional parameters required"
      printCopyHelp
    fi
  ;;

  #(show)
    #showPsftVars
  #;;

  #(toggle)
    # Toggle configuration settings
  #;;

  #(encrypt)
    # encrypt web, app, prcs passwords
  #;;

  #(doctor)
    # Validate current environment settings
    #runCheckup
  #;;

  (*)
    printHelp
  ;;

esac
