#!/usr/bin/env bash
#===============================================================================
# vim: softtabstop=2 shiftwidth=2 expandtab fenc=utf-8:
#===============================================================================
#
#          FILE: pscfg
#
#   DESCRIPTION: Utility script for modifying Sparky configuration files
#
#===============================================================================

set -e

# Source the function libraries
BASEDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
#BASEDIR=$(dirname $0)
#source $BASEDIR/../lib/libutil.sh
# shellcheck disable=1090
source "$BASEDIR"/../lib/libpscfg.sh

# Validate that the ~/.environments directory exists
checkForEnvironmentDir

# Parse the command arguments
case $1 in

  (help)
    printHelp
  ;;

  (list)
    listEnvironments
  ;;

  (create)
    if [[ $2 ]]; then
      createEnvironment $2
    else
      echoError "Additional parameters required"
      printCreateHelp
    fi
  ;;

  (edit)
    if [[ $2 ]]; then
      editEnvironment $2
    else
      echoError "Additional parameters required"
      printEditHelp
    fi
  ;;

  (delete)
    if [[ $2 ]]; then
      deleteEnvironment $2
    else
      echoError "Additional parameters required"
      printDeleteHelp
    fi
  ;;

  (copy)
    if [[ $2 && $3 ]]; then
      copyEnvironment $2 $3
    else
      echoError "Additional parameters required"
      printCopyHelp
    fi
  ;;

  (*)
    printHelp
  ;;

esac
